#include<stdio.h>

int main ()

{

for(inti=1;i<6;i++)

{

for(int x=0;x<5-i;x++)

{

printf(" ");

}



for(int a=0;a<2*i-1;a++)

{

printf("*");

}

printf("\n");

}

for(int i=4;i;i--)

{

for(int x=5-i;x;x--)

{

printf(" ");

}

for(int a=0;a<2*i-1;a++)

{

printf("*");

}

printf("\n");

}

system("pause");

return 0;

}

